<h2>Sign In</h2>

<div>
 <%= form_for @passenger, url: '/passengers/dashboard', method: :get do |f| %>
   <table>
     <tr>
       <td><%= f.text_field :email , placeholder: "Email" %></td>
     </tr>
     <tr>
       <td><%= f.password_field :password , placeholder: "Password" %></td>
     </tr>
    </table>
    <br>
   <%= f.submit "Submit", class: "btn btn-default" %>
 <% end %>
 <a class="btn btn-default" href="passengers/new">Register</a>
</div>