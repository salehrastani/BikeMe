<h2>Sign In As Passenger</h2>

<div >
  <%= form_for @passenger, url: '/passengers/login', method: :post do |f| %>
  <div>
    <%= f.text_field :email , placeholder: "Email" %></td>
  </div>
  <div>
    <%= f.password_field :password , placeholder: "Password" %></td>
  </div>
  <br>
  <%= f.submit "Sign in as passenger", class: "btn btn-default btn-primary" %>
  <% end %>
  <a class="btn btn-primary" href="passengers/new">Register as passenger</a>
  <br>
  <a class="btn btn-primary" href="/drivers">Sign in as Driver</a>
</div>


